{
  "manifest_version": 3,
  "name": "Wiza AutoFill",
  "version": "0.1.0",
  "description": "Autofill visa/application forms with saved profile data.",
  "action": { "default_popup": "popup/popup.html" },
  "icons": { "128": "assets/icon128.png" },
  "permissions": ["storage", "activeTab", "tabs", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background/service-worker.js" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/validators.js", "lib/mapper.js", "lib/inline-autofill.js", "content/content.js"],
      "run_at": "document_idle"
    }
  ]
}
